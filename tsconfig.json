{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "alwaysStrict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*_test.ts",
    "node_modules"
  ],
  "typedocOptions": {
    "mode": "file",
    "include": "./src",
    "out": "documentation/"
  }
}